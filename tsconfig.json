{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./packages",
    "strict": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": ["esnext", "DOM"],
    "types": ["vitest/globals"],
    "paths": {
      "@mini-react/*": ["./*/src"],
      "mini-react": ["./react/src"],
      // 指向react-dom下的hostConfig
      "hostConfig": ["./react-dom/src/hostConfig"]
    }
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "./react/example/*"
  ]
}
